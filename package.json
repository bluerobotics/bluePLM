{
  "name": "blue-plm",
  "version": "3.0.2",
  "description": "Product Lifecycle Management for everyone who builds",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "typecheck": "tsc --noEmit",
    "release": "node scripts/release.js",
    "download-restic": "node scripts/download-restic.js",
    "build-sw-service": "node scripts/build-sw-service.js",
    "cli": "node cli/blueplm.js",
    "api": "npx tsx api/server.ts",
    "api:dev": "npx tsx --watch api/server.ts",
    "api:build": "npx tsc api/server.ts --outDir dist-api --esModuleInterop --module commonjs --target ES2020",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@sentry/electron": "^7.5.0",
    "@supabase/supabase-js": "^2.39.0",
    "cfb": "^1.2.2",
    "chokidar": "^5.0.0",
    "date-fns": "^3.0.6",
    "electron-updater": "^6.7.3",
    "fastify": "^5.2.1",
    "lucide-react": "^0.468.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "systeminformation": "^5.27.13",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "playwright": "^1.57.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.bluerobotics.plm",
    "productName": "BluePLM",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asarUnpack": [
      "resources/bin/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "bluerobotics",
      "repo": "bluePLM"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "resources/bin/win32",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "solidworks-service/BluePLM.SolidWorksService/bin/Release",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "resources/bin/darwin-${arch}",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "resources/bin/linux",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    }
  }
}
